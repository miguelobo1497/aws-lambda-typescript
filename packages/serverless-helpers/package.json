{
  "name": "@swarmion-starter/serverless-helpers",
  "private": true,
  "version": "1.0.0",
  "license": "UNLICENSED",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "lint-fix": "yarn linter-base-config --fix",
    "lint-fix-all": "yarn lint-fix .",
    "linter-base-config": "eslint --ext=js,ts .",
    "package": "rm -rf dist && yarn package-cjs && yarn package-esm && yarn package-types",
    "package-cjs": "NODE_ENV=cjs yarn transpile --out-dir dist/cjs --source-maps",
    "package-esm": "NODE_ENV=esm yarn transpile --out-dir dist/esm --source-maps",
    "package-types": "ttsc -p tsconfig.build.json",
    "test": "yarn test-linter && yarn test-type && yarn test-unit && yarn test-circular",
    "test-circular": "yarn depcruise --validate .dependency-cruiser.js .",
    "test-linter": "yarn linter-base-config .",
    "test-type": "tsc --noEmit --emitDeclarationOnly false",
    "test-unit": "jest --runInBand --collectCoverage --logHeapUsage --passWithNoTests",
    "transpile": "babel src --extensions .ts --quiet",
    "watch": "rm -rf dist && concurrently 'yarn:package-* --watch'"
  },
  "dependencies": {
    "@babel/runtime": "^7.17.9",
    "@middy/core": "^2.5.7",
    "@middy/http-error-handler": "^2.5.7",
    "@middy/http-json-body-parser": "^2.5.7",
    "@middy/validator": "^2.5.7"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.17.10",
    "@babel/plugin-transform-runtime": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-typescript": "^7.16.7",
    "@serverless/typescript": "^3.17.0",
    "@swarmion-starter/configuration": "1.0.0",
    "@types/aws-lambda": "^8.10.97",
    "@types/node": "^17.0.32",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "babel-plugin-module-resolver": "^4.1.0",
    "concurrently": "^7.1.0",
    "dependency-cruiser": "^11.7.0",
    "eslint": "^8.15.0",
    "jest": "^27.5.1",
    "json-schema-to-ts": "^2.4.0",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "ttypescript": "^1.5.13",
    "typescript": "^4.6.4"
  },
  "nx": {
    "targets": {
      "package": {
        "outputs": [
          "packages/serverless-helpers/dist"
        ]
      }
    }
  }
}
